%body
  .side-bar
    .side-bar-header
      .side-header-box
        .side-header-box__user-name
          = current_user.name
        .icon-box
          %ul.icon
            %li.icon__icons
              = link_to new_group_path do
                = icon('fas', 'edit')
            %li.icon__icons
              = link_to edit_user_path(current_user) do
                = icon('fas', 'cog')
    .side-bar-group-lists
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group) do
            .groupname
              = group.name
            .status
              = group.show_last_message
            